{
    "name": "react-event-forms",
    "private": false,
    "version": "0.4.4",
    "author": "Marco Raffaello",
    "repository": {
        "type": "git",
        "url": "https://github.com/mRaffaello/react-event-forms"
    },
    "keywords": [
        "react",
        "forms"
    ],
    "license": "MIT",
    "main": "./dist/react-event-forms.umd.js",
    "module": "./dist/react-event-forms.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/react-event-forms.es.js",
            "require": "./dist/react-event-forms.umd.js"
        }
    },
    "engines": {
        "node": "18"
    },
    "scripts": {
        "dev": "storybook dev -p 6006",
        "build": "storybook build",
        "build:lib": "tsc && pnpm test:single && vite build",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix",
        "prettier": "prettier --write \"src/**/*.{ts,tsx,js,mdx}\"",
        "prepare": "husky install",
        "test": "vitest --typecheck",
        "test:single": "vitest run --typecheck",
        "coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@babel/core": "7.22.10",
        "@storybook/addon-essentials": "^8.0.8",
        "@storybook/addon-interactions": "^8.0.8",
        "@storybook/addon-links": "^8.0.8",
        "@storybook/addon-styling": "^1.3.7",
        "@storybook/blocks": "^8.0.8",
        "@storybook/react": "^8.0.8",
        "@storybook/react-vite": "^8.0.8",
        "@storybook/test": "^8.0.8",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "20.4.9",
        "@types/react": "18.2.20",
        "@types/react-datepicker": "^6.2.0",
        "@types/react-dom": "18.2.7",
        "@typescript-eslint/eslint-plugin": "5.60.0",
        "@vitejs/plugin-react": "4.2.1",
        "@vitest/coverage-v8": "^1.5.0",
        "babel-loader": "9.1.3",
        "eslint": "8.46.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-config-standard-with-typescript": "37.0.0",
        "eslint-plugin-import": "2.28.0",
        "eslint-plugin-n": "16.0.1",
        "eslint-plugin-promise": "6.1.1",
        "eslint-plugin-react": "7.33.1",
        "eslint-plugin-storybook": "^0.8.0",
        "husky": "8.0.3",
        "jsdom": "^24.0.0",
        "lint-staged": "13.2.3",
        "postcss": "8.4.27",
        "prettier": "3.0.1",
        "react": "18.2.0",
        "react-datepicker": "^6.9.0",
        "react-dom": "18.2.0",
        "storybook": "^8.0.8",
        "tailwindcss": "3.3.3",
        "typescript": "5.1.6",
        "vite": "5.2.9",
        "vite-plugin-dts": "3.8.3",
        "vitest": "^1.5.0",
        "zod": "^3.22.4"
    },
    "peerDependencies": {
        "react": ">=18.2.0",
        "react-dom": ">=18.2.0",
        "zod": "^3.22.4"
    },
    "files": [
        "dist"
    ],
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json,css,md}": [
            "prettier -w"
        ]
    },
    "dependencies": {
        "eventemitter3": "^5.0.1"
    }
}
